# Universe Blockchain - Environment Configuration
# Copy this file to .env and fill in your values

# DEPLOYMENT CONFIGURATION
DEPLOYER_PRIVATE_KEY=0x... # Private key for deploying contracts (needs ETH on Arbitrum Sepolia/One)
PARENT_CHAIN_RPC=https://sepolia-rollup.arbitrum.io/rpc # Arbitrum Sepolia (testnet) or Arbitrum One (mainnet)

# UNIVERSE CHAIN CONFIGURATION
UNIVERSE_CHAIN_ID=888777 # Unique chain ID (check https://chainlist.org/)
UNIVERSE_CHAIN_NAME=Universe Blockchain
UNIVERSE_OWNER_ADDRESS=0x... # Multi-sig address that will own the chain

# VALIDATORS & BATCH POSTERS
VALIDATOR_ADDRESS=0x... # Address that will validate state transitions
BATCH_POSTER_ADDRESS=0x... # Address that posts batches to parent chain
BATCH_POSTER_PRIVATE_KEY=0x... # Private key for batch poster (needs ETH for gas)

# AXM TOKEN CONFIGURATION (Custom Gas Token)
AXM_TOKEN_ADDRESS=0x... # AXM ERC20 address on parent chain (Arbitrum One/Sepolia)
USE_CUSTOM_GAS_TOKEN=true # Set to 'false' for ETH gas (testing only)

# RAAS PROVIDER (Optional - for managed deployment)
RAAS_PROVIDER=caldera # Options: caldera, conduit, quicknode, gelato, altlayer, self-hosted
RAAS_API_KEY=... # Provider API key if using managed service

# TREASURY CONFIGURATION (AXM Gas Auto-Swap)
TREASURY_WALLET_ADDRESS=0x... # Treasury collects AXM fees
DEX_ROUTER_ADDRESS=0x... # Uniswap V3 router for AXMâ†’ETH swaps
MIN_ETH_BALANCE=1.0 # Alert threshold for batch poster ETH balance
BURN_PERCENTAGE=50 # % of AXM fees to burn (remainder swapped to ETH)

# MONITORING & ALERTS
SLACK_WEBHOOK_URL=... # For alerts (optional)
DISCORD_WEBHOOK_URL=... # For alerts (optional)
ALERT_EMAIL=admin@axiomsmartcity.com

# BLOCK EXPLORER
BLOCKSCOUT_URL=https://universe-explorer.axiom.city # Custom explorer (post-launch)
